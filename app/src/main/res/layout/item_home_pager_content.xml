<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/item_home_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="5dp"
        android:src="@mipmap/loading"
        />
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/item_home_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="111111111111111111111111"/>
        <TextView
            android:id="@+id/item_home_sprice"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_icon"
            android:text="省15元"/>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/theme"
                android:text="券后价："/>
            <TextView
                android:id="@+id/item_home_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="19元"/>
            <TextView
                android:layout_marginLeft="40dp"
                android:id="@+id/item_home_rprice"
                android:textColor="@color/theme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18"/>
        </LinearLayout>
            <TextView
                android:layout_gravity="end"
                android:id="@+id/item_home_person"
                android:textColor="@color/grey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1888人购买"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>